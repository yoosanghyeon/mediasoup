doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title WebRtc Demo
        
        link(rel="stylesheet", href="/public/css/pico.classless.css")
        link(rel="stylesheet", href="/public/css/style.css")
      
    body
        header
            h1#outerTitle WebRtc Demo
            h2#roomTitle(hidden) WebRtc Demo
        main
            div#welcome
                form#roomInput
                    input(type="text", required, placeholder="room name")
                    button Enter Room
            div#call
                div.figure#otherVideos
                    video#myFace(autoplay, playsinline)
                div#myStream
                    video#otherFace(autoplay, playsinline, controls)
                footer    
                    div.container
                        div#micMenu.mycontainer
                            input#micGain(type="range" name="points" min="0" max="2" value="1" step="0.1" )
                            p#gainValue 1.0
                    div#muteMenu       
                        button#mute Mute
                        div#whitespace
                        button#camera Turn Camera Off
                    div#changeCameraMenu(name="Courses Titles")
                        h5 카메라   
                        select#cameras
                    div#changeCodecsMenu
                        h5 비디오코덱   
                        select#videoCodecsSelects 
        
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")